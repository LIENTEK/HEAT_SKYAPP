<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Base.Views.PopUp.ErrorGenerarlPopContent">
    <Frame BackgroundColor="IndianRed" Margin="0,0,0,-100" HeightRequest="250" HorizontalOptions="FillAndExpand" >
        <StackLayout >
            <Image Source="https://www.pngkey.com/png/full/129-1296729_alert-icon-png.png" HeightRequest="60" WidthRequest="60"  HorizontalOptions="Center" />
            <Label Text="{Binding ErrorGeneralMsg}" HorizontalOptions="Center" TextColor="White" FontSize="20" Margin="10,5,10,5" />
        </StackLayout>
    </Frame>
</ContentView>
