<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxco="clr-namespace:DevExpress.Maui.Controls;assembly=DevExpress.Maui.Controls"
             x:Class="Base.Views.PopUp.ExitoPopWsContent" 
             IsVisible="false">
    <dxco:DXPopup IsOpen="{Binding ShowPopExitoWs}" AllowScrim="True" BackgroundColor="White" ScrimColor="#70111111" CornerRadius="12" >
        <Grid Padding="15" WidthRequest="260" HorizontalOptions="Center" RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>
            <Image Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Source="https://w7.pngwing.com/pngs/717/141/png-transparent-circle-correct-mark-success-tick-yes-check-flat-actions-icon-thumbnail.png" HeightRequest="50" WidthRequest="50" Margin="5" />
            <Label Grid.Row="1" Grid.Column="1" Text="{Binding ExitoPopWsMsg}" HorizontalTextAlignment="Center" />

        </Grid>
    </dxco:DXPopup>
</ContentView>
